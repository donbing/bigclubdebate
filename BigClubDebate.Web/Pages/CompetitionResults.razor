@using BigClubDebate.Data
@using BigClubDebate.Data.Model
<article class="stats-block container">
    <h3 class="middle-text">
        @ChildContent
    </h3>
    <h4>team1 Stats</h4>
    <ul class="team1 stats">
        <li class="apps">
            <span class="num">@Team1.Years</span> <span class="type">years</span>
            <ul class="extras">
                @if (Team1.Years == 0)
                {
                    <li><span>Never entered competition</span></li>
                }
                else
                {
                    <li><span>@Team1.CompetitionEntriesInLast10Years</span> in 10 years</li>
                }
            </ul>
        </li>
        <li class="assists"><span class="num">@Team1.RunnersUp</span>  <span class="type">runner-up</span></li>
        <li class="goals">
            <span class="num">@Team1.CompetitionWins</span>  <span class="type">winner</span>
            <span class="plus full-stats-toggle"><i class="fa fa-plus"></i></span>
            <ul class="extras">
                @if (Team1.CompetitionWins == 0)
                {
                    <li><span>NO WINS EVER</span></li>
                }
                else
                {
                    <li><span>@Team1.CompetitionWinsInLast10Years</span> in 10 years</li>
                    <li><span class="date">@Team1.LastCompetitionWinDate</span> last win</li>
                }
            </ul>
        </li>
    </ul>

    <h4>team2 Stats</h4>
    <ul class="team2 stats">
        <li class="goals">
            <span class="num">@Team2.CompetitionWins</span>  <span class="type">winner</span>
            <span class="plus full-stats-toggle"><i class="fa fa-plus"></i></span>
            <ul class="extras">
                @if (Team2.CompetitionWins == 0)
                {
                    <li><span>NO WINS EVER</span></li>
                }
                else
                {
                    <li><span>@Team2.CompetitionWinsInLast10Years</span> in 10 years</li>
                    <li><span class="date">@Team2.LastCompetitionWinDate</span> last win</li>
                }
            </ul>
        </li>
        <li class="assists"><span class="num">@Team2.RunnersUp</span> runner-up</li>
        <li class="apps">
            <span class="num">@Team2.Years</span>  <span class="type">years</span>
            <ul class="extras">
                @if (Team2.Years == 0)
                {
                    <li><span>Never entered competition</span></li>
                }
                else
                {
                    <li><span>@Team2.CompetitionEntriesInLast10Years</span> in 10 years</li>
                }
            </ul>
        </li>
    </ul>
</article>


@code {
    [Parameter]
    public TeamStats Team1 { get; set; }

    [Parameter]
    public TeamStats Team2 { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}